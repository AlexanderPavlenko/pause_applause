{
  "manifest_version": 2,
  "name": "PauseApplause",
  "version": "0.1.1",
  "description": "Disable displaying any likes and notifications in social network",
  "author": "Alexander Pavlenko <alerticus@gmail.com>",
  "content_scripts": [{
    "matches": ["*://vk.com/*"],
    "css": ["pause_applause_vk_com.css"]
  }],
  "browser_action": {
    "default_popup": "actions_popup.html"
  },
  "permissions": [
    "activeTab"
  ],
  "homepage_url": "http://pause-applause.alerticus.ru",
  "update_url": "https://raw.github.com/AlexanderPavlenko/pause_applause/master/updates.xml"
}
